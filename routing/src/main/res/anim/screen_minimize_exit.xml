<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
     android:interpolator="@anim/screen_interpolator"
     android:shareInterpolator="true"
    >

    <scale
        android:duration="@integer/standard_screen_transition_duration"
        android:fromXScale="1"
        android:toXScale="0"
        android:fromYScale="1"
        android:toYScale="0"
        />

    <translate
        android:duration="@integer/standard_screen_transition_duration"
        android:fromXDelta="0"
        android:toXDelta="50%"
        android:fromYDelta="0"
        android:toYDelta="50%"
        />

    <alpha
        android:duration="@integer/standard_screen_transition_duration"
        android:fromAlpha="1"
        android:toAlpha="0"
        />
</set>