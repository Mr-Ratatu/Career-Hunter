<?xml version="1.0" encoding="utf-8"?>
<set
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@anim/screen_interpolator"
    android:shareInterpolator="true"
    android:duration="@integer/standard_screen_transition_duration"
    >

    <alpha
        android:fromAlpha="0"
        android:toAlpha="1"
        />
    <scale
        android:fromXScale="1.5"
        android:toXScale="1"
        android:fromYScale="1.5"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        />
</set>